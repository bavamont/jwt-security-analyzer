{
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
    },
    "globals": {
        "nodeAPI": "readonly",
        "validation": "readonly",
        "i18n": "readonly"
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "no-console": "warn",
        "no-debugger": "error",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-new-func": "error",
        "no-script-url": "error",
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": ["error", "always"],
        "curly": "error",
        "brace-style": ["error", "1tbs"],
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-trailing-spaces": "error",
        "no-multiple-empty-lines": ["error", { "max": 2 }],
        "comma-dangle": ["error", "never"],
        "no-undef": "error",
        "security/detect-object-injection": "off"
    },
    "plugins": [],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/"
    ]
}